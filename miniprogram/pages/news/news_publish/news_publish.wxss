page{
  width: 100%;
  height: 100%;
}
.container{
  flex-flow:column nowrap;
  align-items: center;
  width: 100%;
  height: 100%;
  background-color: #ffffff;
  display: flex;
}
.input{
  margin: 15rpx 5%;
  width: 90%;
  text-align: left;
  font-size: 38rpx;
  border-bottom: 1px solid #f5f5f5;
}
.row{
  flex: 1;
  display: flex;
  width: 90%;
  height:100%;
  margin: 0 5%;
  overflow: hidden;
  
}
.row .text{
  flex: 1;
  width: 100%;
  height: 100%;
  font-size: 16px;
  line-height: 26px;
  color: #000000;    
}
.uploader{
  width: 100%;
  display: flex;
  flex-flow:row nowrap;
  justify-content: center;
  align-items: center;
  border-top:1px solid #d9d9d9;
  line-height: 2;
  padding-top: 10rpx;
}
.date{
  padding: 5rpx 0;
}
.bottom{
  width: 100%;
  background: #fafafa;
  display: flex;
  flex-flow:row nowrap;
  justify-content: center;
  align-items: center;
  border-top:1px solid #d9d9d9;
  line-height: 2;
  padding-bottom: 20rpx;
  bottom: 0px;
}
.top{
  overflow: hidden;
}
.content{
  background: #fff;
  border: 0.5rpx solid #eee;
}
.type{
  padding: 15rpx;
  margin-left: 15rpx;
  background: #fff;
  border: 0.5rpx solid #fff;
}
.type-hover{
  padding: 15rpx;
  background: #eee;
  border: 0.5rpx solid #fff;
}
.yangshi{
  margin-left: 15rpx;
  color: var(--field-label-color,#646566);
  box-sizing: border-box;
  display: block;
  padding: 20rpx;
  position: relative;
}
.btn.success{
  flex: 1;
  line-height: 2;
  padding-top: 10rpx;
  padding-bottom: 10rpx;
  margin: 30rpx 30rpx;
  background: #1aad19;
  color: #fff;
}
.avatar-wrapper {
  display: flex;
  align-items: center;
  justify-content: center;
  padding: 10px;
}
.avatar {
  width: 80px;
  height: 80px;
  margin-left: 10px;
}