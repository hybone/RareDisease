/* pages/orders_detail/orders_detail.wxss */

.order-detail-container{
  background-color: #ebedf0;
  height: 100%;
  padding-bottom: 90px;
}
::-webkit-scrollbar {
  width: 0;
  height: 0;
  color: transparent;
}

.detail-header {
  height: 480rpx;
}
.detail-swiper{
  width: 100%;
  height: 100%;
}
.detail-swiper .swiper-item{
  width: 100%;
  height: 100%;
}
.detail-img {
  width: 100%;
  height: 100%;
}


.detail-content .header-card{
  background-color: white;
  padding: 4%;
  margin-bottom: 5px;
}

.detail-content .header-card .order-title{
  margin-bottom: 7px;
  margin-top: 7px;
  font-weight: 500;
  line-height: 18px;
  font-size: 18px;
  line-height: var(--card-title-line-height, 20px)
}

.detail-content .header-card .order-price{
  display: inline-block;
  font-weight: 700;
  color: #FF8C00;
  color: var(--card-price-color, #FF8C00);
  font-size: 18px;
  font-size: var(--card-price-font-size, 18px)
}

.detail-content .header-card .order-credit{
  font-weight: 700;
  line-height: 18px;
  font-size: 16px;
  line-height: var(--card-title-line-height, 18px)
}

.detail-content .header-card .header-tags{
  font-size: 13px;
  line-height: 13px;
  line-height: var(--card-title-line-height, 13px);
  color: #646566;
  color: var(--card-desc-color, #646566)
}

.detail-content .header-card .header-imgs{
  width: 50rpx;
  height: 50rpx;
  border-radius: 75rpx;
  margin: 20rpx 20rpx 10rpx 0;
}



/* 信息区 */
.detail-content .info-card {
  background-color: white;
  margin-bottom: 5px;
}

.detail-content .info-card .info-title{
  padding: 3% 4% 3% 4%;
  font-size: 18px;
  color: #323233;
  color: var(--sidebar-selected-text-color,#323233);
  border-left: 3px solid transparent;
  border-color: #ee0a24;
  border-color: var(--sidebar-selected-border-color,#ee0a24);
  height: auto
}

.detail-content .info-card .info-content{
  padding: 3% 4% 3% 4%;
  font-size: 15px;
  text-align: justify;
}

.info-item-container {
  padding: 2% 6% 3% 6%;
  display: flex;
}

.info-item-container .info-item{
  padding: 5%;
  text-align: left;
}

.info-item-container .info-item .name{
  font-size: 14px;
  color: #464547;
}

.info-item-container .info-item .value{
  font-size: 16px;
  color: #130c0e;
  color: var(--card-desc-color, #130c0e)
}

.demo-pic-item{
  width: 92%;
  margin: auto;
}

.demo-pic-item .demo-pic{
  width: 100%;
  height: auto;
}

/*  */
.info-item-container-big {
  display: flex;
  justify-content: flex-start;
}
.info-item-container-big .info-item{
  padding-left: 5%;
  padding-bottom: 3%;
  padding-top: 3%;
  padding-right: 5%;
  text-align: left;
}

.info-item-container-big .info-item .name{
  font-size: 14px;
  color: #464547;
}

.info-item-container-big .info-item .value{
  font-size: 16px;
  color: #130c0e;
  color: var(--card-desc-color, #130c0e)
}

.progress-item {
  margin-top: 20rpx;
  padding: 30rpx; /* 增加整体的内边距，确保内容不会太紧凑 */
  padding-bottom: 50rpx;
}

.container {
  display: flex;
  justify-content: space-around;
  align-items: center;
  height: 30vh;
}

.team-container {
  display: flex;
  flex-direction: column;
  align-items: center;
}

.team-logo {
  width: 100px;
  height: 100px;
  border-radius: 50%;
  margin-bottom: 10px;
}

.team-name {
  font-size: 20px;
  font-weight: bold;
}

.vs-container {
  display: flex;
  justify-content: center;
  align-items: center;
}

.vs-text {
  font-size: 30px;
  font-weight: bold;
}
.top-title {
  display: flex;
  height: 40px;
  text-align: center;
  justify-content: space-around;
}

.top-title .title-left {
  display: flex;
  height: 100%;
  width: 80%;
  text-align: center;
  line-height:40px;
  font-size: 14px;
  justify-content: space-around;
}
.top-title .title-right {
  height: 100%;
  width: 20%;
  text-align: center;
  line-height:40px;
  font-size: 14px;
}

.top-title .title-left .title-item {
  height: 100%;
  width: 25%;
  text-align: center;
  line-height:40px;
  font-size: 14px;
}
.top-title .title-left .title-factory-item {
  height: 100%;
  text-align: center;
  line-height: 40px;
  font-size: 14px;
  width: 164rpx;
  display: block;
  box-sizing: border-box
}

.factory-item{
  display: flex;
  height: 60px;
  text-align: center;
  justify-content: space-around;
}

.factory-item-info{
  display: flex;
  width: 80%;
  text-align: center;
  line-height:60px;
  font-size: 13px;
  justify-content: space-around;
  /* color:#646566 */
}

.info-factory-item{
  text-align: center;
  width: 175rpx; 
  display: block; 
  box-sizing: border-box
}
.info-item{
  text-align:center;
}

.factory-item-check{
  display: flex;
  margin: auto;
  width: 20%;
  text-align: center;
  line-height:60px;
  font-size: 14px;
  justify-content: center;
}
/* video */
.video-gallery {
  display: flex;
  flex-wrap: wrap;
  justify-content: center;
}

.video-item {
  width: 100%;
  max-width: 600rpx; /* 控制每个视频项的最大宽度 */
  margin: 20rpx;
  text-align: center;  /* 标题和按钮居中 */
}

.thumbnail {
  width: 100%; /* 设置视频宽度为父容器的100% */
  height: 200rpx; /* 设置视频高度，保持合理的显示 */
  object-fit: cover; /* 确保视频填充并保持比例 */
  margin-bottom: 10rpx;
}

.demo-pic-item{
  width: 92%;
  margin: auto;
}

.demo-pic-item .demo-pic{
  width: 100%;
  height: auto;
}

/* 评论区 */
.detail-content .comment-card{
  background-color: white;
  margin-bottom: 5px;
}

.detail-content .comment-card .comment-container{
  display: flex;
  align-items: flex-start; /* 让头像和文本对齐 */
  justify-content: space-between; /* 左右对齐 */
  width: 100%;
}

.detail-content .comment-card .info-title{
  padding: 3% 4% 3% 4%;
  font-size: 18px;
  color: #323233;
  color: var(--sidebar-selected-text-color,#323233);
  border-left: 3px solid transparent;
  border-color: #ee0a24;
  border-color: var(--sidebar-selected-border-color,#ee0a24);
  height: auto
}

.detail-content .comment-card .comment-content{
  flex: 1; /* 占据剩余空间 */
  display: flex;
  flex-direction: column;
  word-break: break-word; /* 防止超长文本溢出 */
}

.detail-content .comment-card .comment-tags{
  font-size: 13px;
  line-height: 13px;
  line-height: var(--card-title-line-height, 13px);
  color: #646566;
  margin-bottom: 5px;
}

.detail-content .comment-card .comment-avatar{
  width: 50rpx;
  height: 50rpx;
  border-radius: 50%;
  margin: 20rpx 20rpx 10rpx 0;
  flex-shrink: 0; /* 防止头像被挤压 */
}

detail-content .comment-card .comment-talk{
  font-size: 14px;
  color: #333;
}

