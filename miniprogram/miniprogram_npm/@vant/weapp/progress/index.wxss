@import '../common/index.wxss';
.van-progress{
  background:var(--progress-background-color,#ebedf0);
  border-radius:var(--progress-height,10px);
  height:var(--progress-height,10px);
  position:relative
}
.van-progress__portion{
  background:var(--progress-color,#1989fa);
  border-radius:inherit;
  height:100%;
  left:0;
  position:absolute
}
.van-progress__pivot{
  background-color:var(--progress-pivot-background-color,#1989fa);
  border-radius:1em;
  box-sizing:border-box;
  color:var(--progress-pivot-text-color,#fff);
  font-size:var(--progress-pivot-font-size,12px);
  line-height:var(--progress-pivot-line-height,2.0);
  min-width:4.0em;
  padding:var(--progress-pivot-padding,0 10px);
  position:absolute;
  text-align:center;
  top:50%;
  transform:translateY(-50%);
  word-break:keep-all
}