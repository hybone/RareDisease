

.van-card {
  position: relative;
  box-sizing: border-box;
  padding: 8px 16px;
  padding: var(--card-padding, 8px 16px);
  font-size: 12px;
  font-size: var(--card-font-size, 12px);
  color: #323233;
  color: var(--card-text-color, #323233);
  background-color: #fafafa;
  background-color: var(--card-background-color, #fafafa);
  width: 100%;
  height: 200rpx;
}

.van-card__header {
  display: -webkit-flex;
  display: flex
}

.van-card__header--center {
  -webkit-align-items: center;
  align-items: center;
  -webkit-justify-content: center;
  justify-content: center
}

.van-card__thumb {
  position: relative;
  -webkit-flex: none;
  flex: none;
  width: 110px;
  width: var(--card-thumb-size, 110px);
  height: 80px;
  height: var(--card-thumb-size, 80px);
  margin-right: 12px;
  margin-right: var(--padding-xs, 12px)
}

.van-card__thumb:empty {
  display: none
}

.van-card__img {
  width: 100%;
  height: 100%;
  border-radius: 4px;
  border-radius: var(--border-radius-lg, 4px);
}

.van-card__content {
  position: relative;
  display: -webkit-flex;
  display: flex;
  -webkit-flex: 1;
  flex: 1;
  -webkit-flex-direction: column;
  flex-direction: column;
  -webkit-justify-content: space-between;
  justify-content: space-between;
  min-width: 0;
  min-height: 80px;
  min-height: var(--card-thumb-size, 80px)
}

.van-card__content--center {
  -webkit-justify-content: center;
  justify-content: center
}

.van-card__tags,
.van-card__desc,
.van-card__title {
  word-wrap: break-word
}

.van-card__title {
  font-weight: 700;
  line-height: 20px;
  font-size: 16px;
  line-height: var(--card-title-line-height, 20px)
}

.van-card__desc {
  margin-top: 10rpx;
  margin-bottom: 10rpx;
  line-height: 13px;
  line-height: var(--card-desc-line-height, 13px);
  color: #646566;
  font-size: 13px;
  color: var(--card-desc-color, #646566)
}

.van-card__tags {
  margin-bottom: 4rpx;
  line-height: 12px;
  line-height: var(--card-desc-line-height, 12px);
  color: #646566;
  font-size: 12px;
  color: var(--card-desc-color, #646566)
}

.van-card__bottom {
  line-height: 20px;
}

.van-card__price {
  display: inline-block;
  font-weight: 700;
  color: #ee8b0a;
  color: var(--card-price-color, #ee8b0a);
  font-size: 14px;
  font-size: var(--card-price-font-size, 14px)
}

.van-card__price-integer {
  font-size: 15px;
  font-size: var(--card-price-integer-font-size, 15px)
}

.van-card__price-decimal,
.van-card__price-integer {
  font-family: Avenir-Heavy, PingFang SC, Helvetica Neue, Arial, sans-serif;
  font-family: var(--card-price-font-family, Avenir-Heavy, PingFang SC, Helvetica Neue, Arial, sans-serif)
}

.van-card__origin-price {
  display: inline-block;
  margin-left: 5px;
  text-decoration: line-through;
  font-size: 12px;
  font-size: var(--card-origin-price-font-size, 12px);
  color: #646566;
  color: var(--card-origin-price-color, #646566)
}

.van-card__num {
  float: right
}

.van-card__tag {
  position: absolute !important;
  top: 2px;
  left: 0
}

.van-card__footer {
  -webkit-flex: none;
  flex: none;
  width: 100%;
  text-align: right
}